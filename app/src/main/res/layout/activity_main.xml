<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rossia.life.circleprogresstextview.MainActivity">

    <Button
        android:id="@+id/show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="展示ProgressTextView"
        android:textAllCaps="false" />

    <com.rossia.life.circleprogress.CircleProgressTextView
        android:id="@+id/circle_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:progress_paint_width="5dp"
        app:circle_paint_width="5dp"
        android:layout_centerHorizontal="true"
        android:text="跳过"
        app:progress="120" />

</RelativeLayout>
